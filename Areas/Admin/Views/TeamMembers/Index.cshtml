@model List<TeamMemberGetDto>
@{
    ViewData["Title"] = "Team Members";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Team Members</h4>
            <a class="btn btn-success text-light" asp-action="Create">Add Member</a>
            <div class="table-responsive">
                <table class="table table-striped" style="vertical-align:middle">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                                Options
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td class="py-1">
                                    <img src="~/assets/img/@item.Image" alt="image">
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Position
                                </td>
                                <td>
                                   <div>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning text-light">Update</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger  text-light">Delete</a>
                                   </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

