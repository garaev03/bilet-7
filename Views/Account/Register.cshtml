@model RegisterDto
@{
    ViewData["Title"] = "Register";
}
<div class="ps-5">

    <section class="vh-100 bg-image"
             style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="container">
                        <div class="card" style="border-radius: 15px;">

                            <div>

                                <div class="card-body p-5">
                                    <h2 class="text-uppercase text-center mb-5 " style="background-color:white; border-radius:1rem; padding:1rem; margin-bottom:2rem">Create an account</h2>
                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                                    <form method="post">

                                        <div class="form-outline mb-4">
                                            <input type="text" asp-for="UserName" class=" form-control form-control-lg" />
                                            <label class="form-label" asp-for="UserName"></label>
                                            <span asp-validation-for="UserName" class="text text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="text" asp-for="FirstName" class=" form-control form-control-lg" />
                                            <label class="form-label" asp-for="FirstName"></label>
                                            <span asp-validation-for="FirstName" class="text text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="text" asp-for="LastName" class=" form-control form-control-lg" />
                                            <label class="form-label" asp-for="LastName"></label>
                                            <span asp-validation-for="LastName" class="text text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="email" asp-for="Email" class=" form-control form-control-lg" />
                                            <label class="form-label" asp-for="Email"></label>
                                            <span asp-validation-for="Email" class="text text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" asp-for="Password" class=" form-control form-control-lg" />
                                            <label class="form-label" asp-for="Password"></label>
                                            <span asp-validation-for="Password" class="text text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" asp-for="ConfirmPassword" class=" form-control form-control-lg" />
                                            <label class="form-label" asp-for="ConfirmPassword"></label>
                                            <span asp-validation-for="ConfirmPassword" class="text text-danger"></span>
                                        </div>

                                        <div class="d-flex justify-content-center">
                                            <button type="submit"
                                                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                                Register
                                            </button>
                                        </div>

                                        <p class="text-center text-muted mt-5 mb-0">
                                            Have already an account? <a asp-action="Login"
                                                                        class="fw-bold text-body"><u>Login here</u></a>
                                        </p>

                                    </form>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


